<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/headTV"
        android:layout_width="246dp"
        android:layout_height="42dp"

        android:layout_marginStart="80dp"
        android:layout_marginTop="372dp"
        android:text="Староста"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/editGroupsBtn"
        android:layout_width="264dp"
        android:layout_height="59dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="644dp"
        android:onClick="AddHeadToGroup_Btn"
        android:text="Назначить старосту"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/addGroupCourseET"
        android:layout_width="262dp"
        android:layout_height="50dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="228dp"
        android:ems="10"
        android:hint="  Курс"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/addGroupFacultyET"
        android:layout_width="262dp"
        android:layout_height="50dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="160dp"
        android:ems="10"
        android:hint="  Факультет"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/creatingGroupTV"
        android:layout_width="281dp"
        android:textAlignment="center"

        android:layout_height="45dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:text="Создание группы"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/addGroupNameET"
        android:hint="  Наименование"
        android:layout_width="262dp"
        android:layout_height="50dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="92dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addGroupBtn2"
        android:layout_width="200dp"
        android:layout_height="59dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="296dp"
        android:onClick="AddGroup_Btn"
        android:text="Добавить"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/headSpinner"
        android:layout_width="268dp"
        android:layout_height="52dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="432dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/refreshSp"
        android:layout_width="59dp"
        android:layout_height="59dp"
        android:layout_marginTop="296dp"
        android:layout_marginEnd="68dp"
        android:onClick="RefreshSpinner_Btn"
        android:text="R"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>