<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/deleteGroupBtn"
        android:layout_width="180dp"
        android:layout_height="59dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="376dp"
        android:onClick="DeleteGroup_Btn"
        android:text="Удалить"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/editGroupsBtn"
        android:layout_width="264dp"
        android:layout_height="59dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="644dp"
        android:onClick="AddHeadToGroup_Btn"
        android:text="Назначить старосту"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/addGroupCourseET"
        android:layout_width="262dp"
        android:layout_height="50dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="228dp"
        android:ems="10"
        android:hint="  Курс"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/addGroupFacultyET"
        android:layout_width="262dp"
        android:layout_height="50dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="160dp"
        android:ems="10"
        android:hint="  Факультет"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/creatingGroupTV"
        android:layout_width="281dp"
        android:textAlignment="center"

        android:layout_height="45dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:text="Создание группы"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/addGroupNameET"
        android:hint="  Наименование"
        android:layout_width="262dp"
        android:layout_height="50dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="92dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addGroupBtn2"
        android:layout_width="180dp"
        android:layout_height="59dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="300dp"
        android:onClick="AddGroup_Btn"
        android:text="Добавить"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>