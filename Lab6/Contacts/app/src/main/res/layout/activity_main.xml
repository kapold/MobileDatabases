<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/writeType_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="148dp"
        android:layout_marginTop="332dp"
        android:text="Вид записи"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/personSurname_ET"
        android:layout_width="260dp"
        android:layout_height="52dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="128dp"

        android:ems="10"
        android:hint="  Фамилия"
        android:inputType="textPersonName"
        android:maxLength="20"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/personName_ET"
        android:layout_width="260dp"
        android:layout_height="52dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="64dp"

        android:ems="10"
        android:hint="  Имя"
        android:inputType="textPersonName"
        android:maxLength="20"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/addingUser_TV"
        android:textColor="@color/black"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginTop="16dp"
        android:text="Добавление номера"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/personPhone_ET"
        android:hint="  Телефон"
        android:maxLength="13"
        android:layout_width="260dp"
        android:layout_height="52dp"
        android:textSize="20dp"

        android:layout_marginStart="72dp"
        android:layout_marginTop="192dp"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/personBirthday_ET"
        android:hint="  Дата рождения"
        android:maxLength="10"
        android:layout_width="260dp"
        android:layout_height="52dp"
        android:textSize="20dp"

        android:layout_marginStart="72dp"
        android:layout_marginTop="256dp"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:layout_width="285dp"
        android:layout_height="120dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="368dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <RadioButton
            android:id="@+id/publicWrite_RB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Публичный доступ"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/privateWrite_RB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Приватный доступ" />
    </RadioGroup>

    <Button
        android:id="@+id/addPersonBtn"
        android:onClick="AddContact"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="504dp"
        android:text="Добавить человека"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/searchBtn"
        android:onClick="OpenSearchIntent"


        android:layout_width="77dp"
        android:layout_height="75dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#3F51B5"
        app:tint="#FFD393"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_menu_search" />


</androidx.constraintlayout.widget.ConstraintLayout>